{
  "compilerOptions": {
    "target": "ES5",
    "removeComments": true,
    "preserveConstEnums": false,
    "skipDefaultLibCheck": true,
    "stripInternal": true,
    "outDir": "../../built/egret/",
    "accessorOptimization": true,
    "emitReflection": true,
    "reorderFiles": true,
    "defines": {
      "DEBUG": true,
      "RELEASE": false
    }
  },
  "modules": [
    {
      "name": "egret",
      "removeComments": false,
      "noEmitJs": true,
      "declaration": true,
      "exclude": [
        "node_modules",
        "**/web/*",
        "**/native/*"
      ]
    },
    {
      "name": "egret.native",
      "exclude": [
        "node_modules",
        "**/gfx/*",
        "**/web/*"
      ]
    },
    {
      "name": "egret.web",
      "exclude": [
        "node_modules",
        "**/native/*"
      ]
    }
  ]
}
